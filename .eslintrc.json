{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/recommended",
        "plugin:import/typescript",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "import/extensions": "off",
      "import/no-cycle": "off",
      "semi": "off",
      "no-undef": "off",
      "comma-dangle": "off",
      "no-underscore-dangle": "off",
      "no-console": "off",
      "no-restricted-syntax": [
        "error",
        "ForInStatement",
        "LabeledStatement",
        "WithStatement"
      ],
      "no-plusplus": [
        "off",
        { "allowForLoopAfterthoughts": true }
      ],
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "off"
    }
}
